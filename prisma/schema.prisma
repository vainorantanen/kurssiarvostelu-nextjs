generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Review {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  description    String
  rating          Int
  grade           Int
  workload    Int
  writerIsVerified  Boolean @default(false)
  isVisible Boolean @default(true)
  year        String
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?   @db.ObjectId
  courseSisuId  String
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name String
  password String
  isVerified Boolean @default(false)
  reviews Review[]
}

model School {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model CourseRequest {
    id       String    @id @default(auto()) @map("_id") @db.ObjectId
    name String
    code String
    credits String
    schoolName String
}